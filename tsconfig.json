{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "outDir": "./dist",
        "skipLibCheck": true,
        "noImplicitAny": true,
        "baseUrl": "./src",
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": false,
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "resolveJsonModule": true,
        "lib": [
            "es6",
            "esnext"
        ]
    }
}